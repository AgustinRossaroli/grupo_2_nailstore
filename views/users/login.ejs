<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/login.css" rel="stylesheet" />
    <%- include('../partials/head.ejs') %>
        <title>Ingresá</title>
</head>

<body>
    <%- include('../partials/header.ejs') %>
        <main>
            <div class="main">
                <div class="section-box">
                    <div class="login-image">
                        <img src="/images/Logo.jpg" alt="No responde" />
                    </div>
                    <div class="form-box">
                        <form action="/login" method="post" id="form">
                            <div class="welcome-title">Bienvenido!</div>
                            <div class="titles-box">
                                <div class="titles">Email</div>
                            </div>
                            <div class="input-box">
                                <input type="text" class="input" name="email" placeholder="Correo electrónico" id="email-input"/>
                                <%if (error && error.email) {%>
                                    <p>Email invalido</p>
                                    <%}%>
                            </div>
                            <small id="email-warning"></small>
                            <div class="titles-box">
                                <div class="titles">Contraseña</div>
                            </div>
                            <div class="input-box">
                                <input type="password" class="input" name="contrasena" placeholder="Contraseña" id="password-input"/>
                               <%if (error && error.password) {%>
                                <p>Verifique la contraseña</p>
                                <%}%>
                            </div>
                            <small id="password-warning"></small>
                            <div>
                                <div class="submit-botom">
                                    <button type="submit" class="boton" id="send-botom">Ingresar</button>
                                </div>
                            </div>
                            <div class="ayuda">
                            <a href="/reset-password" id="password">¿Olvidaste tu contraseña?</a>
                            <a href="/signUp" id="register">Creá tu Cuenta</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
        <%- include('../partials/footer.ejs') %>
    <script src="/formsValidations/loginValidator.js"></script>
</body>
</html>